<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/_20sdp">

    <ImageView
        android:id="@+id/imageViewCategoryThumbnail"
        android:layout_width="@dimen/material_baseline_grid_6x"
        android:layout_height="@dimen/material_baseline_grid_6x"
        android:layout_marginTop="@dimen/material_baseline_grid_1x"
        android:background="@drawable/background_rounded_corner_10dp_primary_with_border"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:textAlignment="center"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCategoryThumbnail"/>

</androidx.constraintlayout.widget.ConstraintLayout>